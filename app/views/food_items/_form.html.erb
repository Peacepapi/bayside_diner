
<h1 class='text-center'>Form</h1>
<%= form_for @food_item do |f| %>
  <div class="form-group">
    <%= f.label :name, class: 'form-control-label' %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :description, class: 'form-control-label' %>
    <%= f.text_area :description, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :price, class: 'form-control-label' %>
    <%= f.text_field :price, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :section, class: 'form-control-label' %>
    <%= f.collection_select :section_id, Section.all , :id, :name, include_blank: true, required: true  %>	<span class="required">*</span>
  </div>

  <div class="form-group">
    <%= f.label :remote_image_url, class: 'form-control-label' %>
    <%= f.text_field :remote_image_url, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.submit class: 'btn btn-default' %>
  </div>
<% end %>
