<div class="row text-center">
  <div class="btn-group">
      <%= link_to "All", menu_path, class: 'btn btn-default' %>
      <% Section.all.each do |section| %>
        <%= link_to section.name, menu_path(section: section.id), class: 'btn btn-default' %>
      <% end %>
      <%= sortable "name" %>
      <%= sortable "price" %>
  </div>
</div>
<div class="container" id="food_item_display">
  <div class="row">
    <% @food_items.each do |food_item| %>
      <div class="col-md-4">
        <div class="thumbnail">
          <%= link_to image_tag(food_item.image_url), food_item_path(food_item) %>
          <div class="caption">
            <span class='pull-right'>$<%= food_item.priceFormatted %></span>
            <h3><%= link_to food_item.name, food_item_path(food_item) %></h3>
            <p><%= food_item.description %></p>
          </div>
        </div>
      </div>
    <% end %>
</div>
